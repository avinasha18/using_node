        <script>
            const questions=[
    {
        question: "What's the correct past form of 'visit' ?",
        answers: [
            {text: "Visitted", correct: false},
            {text: "Visit", correct: false},
            {text: "Visiteed", correct:false},
            {text: "Visited", correct: true},
        ]
        
